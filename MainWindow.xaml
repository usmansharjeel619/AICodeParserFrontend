<Window x:Class="AICodeParser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:AICodeParser.ViewModels"
        xmlns:converters="clr-namespace:AICodeParser.Converters"
        Title="AI Code Parser - Professional Edition" 
        Height="900" 
        Width="1600"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundDark}"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <Window.Resources>
        <!-- Converters -->
        <converters:EnumToBooleanConverter x:Key="EnumToBooleanConverter"/>
        <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:ProcessingTextConverter x:Key="ProcessingTextConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <materialDesign:Card Grid.Row="0" Style="{StaticResource DarkCard}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <TextBlock Text="AI Code Parser" Style="{StaticResource HeaderText}"/>
                    <TextBlock Text="Advanced Code Analysis and Verification Platform" 
                              Style="{StaticResource StatusText}"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="Circle" 
                                            Width="12" 
                                            Height="12"
                                            VerticalAlignment="Center"
                                            Margin="0,0,8,0">
                        <materialDesign:PackIcon.Style>
                            <Style TargetType="materialDesign:PackIcon">
                                <Setter Property="Foreground" Value="{StaticResource ErrorColor}"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsApiConnected}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource SuccessColor}"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </materialDesign:PackIcon.Style>
                    </materialDesign:PackIcon>
                    <TextBlock Text="{Binding StatusText}" 
                              Style="{StaticResource StatusText}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Module Selection -->
        <materialDesign:Card Grid.Row="1" Style="{StaticResource DarkCard}" Padding="15" Margin="0,10,0,15">
            <StackPanel>
                <TextBlock Text="Select Analysis Module" 
                          Style="{StaticResource SubHeaderText}"
                          Margin="0,0,0,15"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <RadioButton Content="🐛 Code Debugging" 
                                Style="{StaticResource ModuleButton}"
                                IsChecked="{Binding SelectedModule, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Debugging}"/>

                    <RadioButton Content="🧪 Test Generation" 
                                Style="{StaticResource ModuleButton}"
                                IsChecked="{Binding SelectedModule, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=NLP}"/>

                    <RadioButton Content="✓ Formal Verification" 
                                Style="{StaticResource ModuleButton}"
                                IsChecked="{Binding SelectedModule, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=FormalVerification}"/>
                    <Button Content="📊 Simulink" 
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Click="SimulinkButton_Click"
                                Margin="5"
                                Padding="15,0"
                                FontSize="14" Height="40" Width="118" Background="#FF3C3C3C" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:Card>

        <!-- Main Content Area -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="15"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Code Input -->
            <materialDesign:Card Grid.Column="0" Style="{StaticResource DarkCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Input Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader}">
                        <Grid>
                            <TextBlock Text="CODE INPUT" 
                                      Style="{StaticResource SubHeaderText}"
                                      VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <materialDesign:PackIcon Kind="Code" 
                                                        Width="20" 
                                                        Height="20"
                                                        Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- File Operations -->
                    <Border Grid.Row="1" 
                           Background="{StaticResource BackgroundMedium}" 
                           Padding="10"
                           BorderBrush="{StaticResource BorderColor}"
                           BorderThickness="0,0,0,1">
                        <StackPanel Orientation="Horizontal">
                            <Button Command="{Binding OpenFileCommand}"
                                   Style="{StaticResource SecondaryButton}"
                                   Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FolderOpen" 
                                                            Width="16" 
                                                            Height="16"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="Open File"/>
                                </StackPanel>
                            </Button>

                            <Button Command="{Binding SaveFileCommand}"
                                   Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentSave" 
                                                            Width="16" 
                                                            Height="16"
                                                            VerticalAlignment="Center" 
                                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="Save File"/>
                                </StackPanel>
                            </Button>

                            <TextBlock Text="{Binding CurrentFilePath}" 
                                      Style="{StaticResource StatusText}"
                                      VerticalAlignment="Center"
                                      Margin="15,0,0,0"
                                      TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                    </Border>

                    <!-- Code Editor -->
                    <Border Grid.Row="2" 
                           Background="{StaticResource BackgroundDark}"
                           Padding="10">
                        <TextBox Text="{Binding CodeInput, UpdateSourceTrigger=PropertyChanged}"
                                Style="{StaticResource CodeEditor}"/>
                    </Border>

                    <!-- Additional Options -->
                    <Border Grid.Row="3" 
                           Background="{StaticResource BackgroundMedium}" 
                           Padding="15"
                           BorderBrush="{StaticResource BorderColor}"
                           BorderThickness="0,1,0,0"
                           Visibility="{Binding SelectedModule, Converter={StaticResource EnumToVisibilityConverter}, ConverterParameter=FormalVerification}">
                        <StackPanel>
                            <TextBlock Text="Function Name (Required for Verification):" 
                                      Style="{StaticResource StatusText}"
                                      Margin="0,0,0,8"/>
                            <TextBox Text="{Binding FunctionName, UpdateSourceTrigger=PropertyChanged}"
                                    Background="{StaticResource BackgroundDark}"
                                    Foreground="{StaticResource TextPrimary}"
                                    BorderBrush="{StaticResource BorderColor}"
                                    Padding="10"
                                    FontSize="14"/>
                        </StackPanel>
                    </Border>

                    <!-- Action Buttons -->
                    <Border Grid.Row="4" 
                           Background="{StaticResource BackgroundMedium}" 
                           Padding="15"
                           BorderBrush="{StaticResource BorderColor}"
                           BorderThickness="0,1,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0"
                                   Command="{Binding ProcessCodeCommand}"
                                   Style="{StaticResource PrimaryButton}"
                                   IsEnabled="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"
                                   HorizontalAlignment="Stretch"
                                   Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="PlayCircle" 
                                                            Width="20" 
                                                            Height="20"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,8,0"
                                                            Visibility="{Binding IsProcessing, Converter={StaticResource InverseBooleanConverter}}"/>
                                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                Value="0"
                                                IsIndeterminate="True"
                                                Width="20"
                                                Height="20"
                                                Margin="0,0,8,0"
                                                Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}"/>
                                    <TextBlock Text="{Binding IsProcessing, Converter={StaticResource ProcessingTextConverter}}"
                                              VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>

                            <Button Grid.Column="1"
                                   Command="{Binding ClearAllCommand}"
                                   Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Close" 
                                                            Width="16" 
                                                            Height="16"
                                                            VerticalAlignment="Center"
                                                            Margin="0,0,5,0"/>
                                    <TextBlock Text="Clear"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </materialDesign:Card>

            <!-- Right Panel - Output -->
            <materialDesign:Card Grid.Column="2" Style="{StaticResource DarkCard}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Output Header -->
                    <Border Grid.Row="0" Style="{StaticResource SectionHeader}">
                        <Grid>
                            <TextBlock Text="ANALYSIS RESULTS" 
                                      Style="{StaticResource SubHeaderText}"
                                      VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <materialDesign:PackIcon Kind="ChartBox" 
                                                        Width="20" 
                                                        Height="20"
                                                        Foreground="{StaticResource TextSecondary}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Output Display -->
                    <Border Grid.Row="1" 
                           Background="{StaticResource BackgroundDark}"
                           Padding="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBox Text="{Binding OutputText, Mode=OneWay}"
                                    Style="{StaticResource OutputTextBox}"
                                    TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="{StaticResource BackgroundMedium}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,1,0,0"
                Padding="15,10"
                Margin="0,15,0,0">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="© 2024 AI Code Parser" 
                              Style="{StaticResource StatusText}"/>
                    <TextBlock Text=" | " 
                              Style="{StaticResource StatusText}" 
                              Margin="10,0"/>
                    <TextBlock Text="Backend: http://localhost:5000" 
                              Style="{StaticResource StatusText}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <TextBlock Style="{StaticResource StatusText}">
                        <Run Text="Mode: "/>
                        <Run Text="{Binding SelectedModule}" FontWeight="Medium"/>
                    </TextBlock>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
